<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lap_21"
    tools:context=".MenuActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="438dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/logo3_sf" />

            <Button
                android:id="@+id/button_abrirdia"
                style="@style/botonVerde"
                android:layout_width="700dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="ABRIR DIA"
                android:textSize="14sp"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/button_cuentas"
                style="@style/botonVerde"
                android:layout_width="700dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="CUENTAS"
                android:textSize="14sp"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/button_pedidos"
                style="@style/botonVerde"
                android:layout_width="700dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="PEDIDOS"
                android:textSize="14sp"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/button_agenda"
                style="@style/botonVerde"
                android:layout_width="700dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:text="AGENDA"
                android:textSize="14sp"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/button_salir2"
                android:layout_width="700dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#A7A2A8"
                android:text="salir" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>