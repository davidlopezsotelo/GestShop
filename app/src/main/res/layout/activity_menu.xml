<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lap_21"
    tools:context=".MenuActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.431"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="340dp"
                android:layout_height="132dp"
                app:srcCompat="@drawable/logo3_sf" />

            <Button
                android:id="@+id/button_abrirdia"
                style="@style/botonVerde"
                android:layout_marginTop="10dp"
                android:text="ABRIR DIA"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/button_cuentas"
                style="@style/botonVerde"
                android:layout_width="280dp"
                android:layout_height="70dp"
                android:layout_marginTop="24dp"
                android:text="CUENTAS"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/button_pedidos"
                style="@style/botonVerde"
                android:layout_width="280dp"
                android:layout_height="70dp"
                android:layout_marginTop="24dp"
                android:text="PEDIDOS"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/button_archivos"
                style="@style/botonVerde"
                android:layout_width="280dp"
                android:layout_height="70dp"
                android:layout_marginTop="24dp"
                android:text="ARCHIVOS"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/button_agenda"
                style="@style/botonVerde"
                android:layout_width="280dp"
                android:layout_height="70dp"
                android:layout_marginTop="24dp"
                android:text="AGENDA"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/button_cerrarSesion"
                android:layout_width="180dp"
                android:layout_height="54dp"
                android:layout_marginTop="13dp"
                android:backgroundTint="#A7A2A8"
                android:text="CERRAR SESION" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>